    \draw ([scale=\qlegoscale, rotate=\qlegorotate] $(center2) + (2.82pt,-2.82pt)$) -- ([scale=\qlegoscale, rotate=\qlegorotate] $(center2) - (2.82pt,-2.82pt)$);
