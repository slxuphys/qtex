\draw[#1] (a) -- ($(a)!#2!([rotate around =90:(a)] b)$) -- ++ ($(b)-(a)$) -- (b) ; ;
}

\NewDocumentCommand{\dashedbox}{O{} m m}{
\coordinate (lowerleft) at ($(#2) + (-0.5,-0.5)$) ;
\coordinate (upperright) at ($(#3) + (0.5, 0.5)$) ;
\draw[rounded corners,draw=black, dashed, #1] ([scale=\qlegoscale, rotate=\qlegorotate] lowerleft) rectangle ([scale=\qlegoscale,rotate=\qlegorotate] upperright);
}

\def\parser[#1,#2]{
    \def\x{#1}
    \def\y{#2}
}

\NewDocumentCommand{\dupgate}{m   > { \SplitArgument{2} { ; } }m  > { \SplitArgument{2} { ; } }m}
{ 
\@dupgate{#1}#2#3
}

\NewDocumentCommand{\@dupgate}{m m m m m m m}{
\IfValueTF{#3}
      {\def\numx{#3}}
      {\def\numx{1}}
\IfValueTF{#4}
      {\def\itx{#4}}
      {\def\itx{1}}
\IfValueTF{#6}
      {\def\numy{#6}}
      {\def\numy{1}}
\IfValueTF{#7}
      {\def\ity{#7}}
      {\def\ity{1}}
      
\foreach \x in {1,...,\numx}
\foreach \y in {1,...,\numy}
{#1{#2+\x*\itx-\itx,#5+\y*\ity-\ity}}
}


