\NewDocumentCommand{\@grid}{O{} m m}
{
\coordinate (a) at (#3);
\coordinate (b) at ($(#3) + (0, #2)$);
\draw ([scale=\qlegoscale, rotate=\qlegorotate] a) -- ([scale=\qlegoscale, rotate=\qlegorotate] b);
}



\NewDocumentCommand{\@gate}{ O{} O{} O{1} O{1} m}{
\coordinate (a) at ($ (#5) +(-0.25,#4/2-0.5)$);
\node[rectangle, draw=black, fill=white, minimum height=-0.5cm+#4cm, minimum width=-0.5 cm +#3 cm, anchor=west, scale=\qlegoscale, rotate=\qlegorotate, #1,label=#2] at ([scale=\qlegoscale,rotate=\qlegorotate] a) {};
}



\NewDocumentCommand{\@qubit}{O{} O{} m}{
\coordinate (center) at (#3);
\node[circle, draw=black, fill=white, minimum size=0.5cm, scale=\qlegoscale,#1,label={#2}] at ([scale=\qlegoscale, rotate=\qlegorotate] center) {};
}



\NewDocumentCommand{\@ctrl}{o O{} O{1} m}{
\coordinate (a) at (#4);
\coordinate (b) at ($(#4) + (#3,0)$);
\node[circle, fill=black, minimum size=6, inner sep=0, scale=\qlegoscale] at ([scale=\qlegoscale, rotate=\qlegorotate] a) {};
\IfNoValueF{#1}{
    \draw ([scale=\qlegoscale, rotate=\qlegorotate] a) -- ([scale=\qlegoscale, rotate=\qlegorotate] b);
    \expandafter\csname @#1\endcsname #2{b}
}
}

\NewDocumentCommand{\@ctrlr}{o O{} O{1} m}{
\coordinate (a) at (#4);
\coordinate (b) at ($(#4) + (#3,0)$);

\IfNoValueF{#1}{
    \draw ([scale=\qlegoscale, rotate=\qlegorotate] a) -- ([scale=\qlegoscale, rotate=\qlegorotate] b);
    \expandafter\csname @#1\endcsname #2{b}
}
\coordinate (a) at (#4);
\node[circle, draw=black, fill=white, minimum size=6, inner sep=0, scale=\qlegoscale] at ([scale=\qlegoscale, rotate=\qlegorotate] a) {};
}




\NewDocumentCommand{\@paulix}{m}{
\coordinate (a) at (#1);
\node[circle, draw=black, fill=white, minimum size=8, inner sep=0, scale=\qlegoscale] at ([scale=\qlegoscale, rotate=\qlegorotate] a) {};
\draw ([scale=\qlegoscale, rotate=\qlegorotate] $(a)-(0,-4pt)$) -- ([scale=\qlegoscale, rotate=\qlegorotate] $(a)-(0,4pt)$);
\draw ([scale=\qlegoscale, rotate=\qlegorotate] $(a)-(-4pt,0)$) -- ([scale=\qlegoscale, rotate=\qlegorotate] $(a)-(4pt,0)$);
}



\NewDocumentCommand{\@meter}{m}{
\coordinate (center) at (#1);
\node[rectangle, draw=black, fill=white, thick, minimum size=0.5cm, inner sep=0, scale=\qlegoscale,rotate=\qlegorotate] at ([scale=\qlegoscale, rotate=\qlegorotate] center) {};
\coordinate (arrowleft) at ($([rotate=\qlegorotate] center) + (0,-0.15)$);
\coordinate (arrowright) at ($([rotate=\qlegorotate] center) + (0.15,0.1)$);
\draw [-stealth]([scale=\qlegoscale] arrowleft) -- ([scale=\qlegoscale] arrowright);
\coordinate (tmp) at ($([rotate=\qlegorotate] center) + (-0.2,-0.1)$);
\draw ([scale=\qlegoscale] tmp) arc (120:60:0.4*\qlegoscale);
}



\NewDocumentCommand{\@twoqubit}{O{} O{} m}{
\coordinate (center) at ($(#3)+(0.5,0)$);

\node[rectangle, fill=white, thick, minimum width=1.5cm, minimum height=1cm, inner sep=0, scale=\qlegoscale, rotate=\qlegorotate] at ([scale=\qlegoscale, rotate=\qlegorotate] center) {};
\node[rectangle, draw=black, fill=white, thick, minimum size=0.5cm, inner sep=0, scale=\qlegoscale, rotate=\qlegorotate,#1, label=#2] at ([scale=\qlegoscale, rotate=\qlegorotate] center) (sq)  {};
\draw (sq.south west) -- ($(sq.south west) + ([rotate=\qlegorotate](-0.25*\qlegoscale,-0.25*\qlegoscale)$);
\draw (sq.north west) -- ($(sq.north west) + ([rotate=\qlegorotate](-0.25*\qlegoscale, 0.25*\qlegoscale)$);
\draw (sq.south east) -- ($(sq.south east) + ([rotate=\qlegorotate](0.25*\qlegoscale, -0.25*\qlegoscale)$);
\draw (sq.north east) -- ($(sq.north east) + ([rotate=\qlegorotate](0.25*\qlegoscale, 0.25*\qlegoscale)$);
}



\NewDocumentCommand{\@swap}{O{} O{} m}{
\coordinate (center) at ($(#3)+(0.5,0)$);
\node[rectangle, fill=white, thick, minimum width=1.5cm, minimum height=1cm, inner sep=0, scale=\qlegoscale, rotate=\qlegorotate, #1, label=#2] at ([scale=\qlegoscale, rotate=\qlegorotate] center) {};

\coordinate (n1) at ($(center)+(-0.5,0.5)$);
\coordinate (n2) at ($(center)+(0.5,-0.5)$);
\draw  ([scale=\qlegoscale, rotate=\qlegorotate] n1) --  ([scale=\qlegoscale, rotate=\qlegorotate] n2);
\coordinate (n1) at ($(center)+(-0.5,-0.5)$);
\coordinate (n2) at ($(center)+(0.5,0.5)$);
\draw[double=black, draw=white, double distance=0.5pt,thick]([scale=\qlegoscale,rotate=\qlegorotate] n1) -- ([scale=\qlegoscale,rotate=\qlegorotate] n2);
}



